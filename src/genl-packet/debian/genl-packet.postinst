#!/bin/sh
# postinst script for genl-packet
#
# see: dh_installdeb(1)

set -e

if ! cat /proc/1/cgroup | grep -q "/docker"; then
    # Unload kernel module, if running
    lsmod | grep -q genl_packet && rmmod genl_packet || true
    # Insert kernel module
    insmod /lib/modules/$(uname -r)/extra/genl-packet.ko
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.
# Note: this includes running depmod.

#DEBHELPER#

exit 0
